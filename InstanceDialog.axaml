<shadui:Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
    mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="235"
    x:Class="Vid2Audio.InstanceDialog"
    Title="Vid2Audio"
    TitleFontWeight="SemiBold"
    Icon="avares://Vid2Audio/Assets/Icons/Vid2Audio-icon.ico"
    Width="400"
    Height="235"
    CanMaximize="False"
    CanMinimize="False"
    CanResize="False"
    ShowBottomBorder="False"
    WindowStartupLocation="CenterScreen">

    <shadui:Window.LogoContent>
        <Svg
            Width="25"
            Height="25"
            Margin="10,8,0,8"
            Path="avares://Vid2Audio/Assets/Logos/Vid2Audio-logo.svg"/>
    </shadui:Window.LogoContent>
    
    <StackPanel Margin="24,16" Spacing="8">
        <TextBlock Classes="Large" Text="Uh oh!"/>
        <TextBlock
            Classes="Small"
            Text="An instance of Vid2Audio app is already running on this computer. You can only run one instance at a time."
            TextWrapping="Wrap"/>
        <Button
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Classes="Primary"
            Click="OnClose"
            Content="Close"/>
    </StackPanel>
</shadui:Window>